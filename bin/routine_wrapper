//----------------------------------------------------------------------------------------------------------------------
$gids_home = realpath( dirname( $argv[0] ).'/..' );

//----------------------------------------------------------------------------------------------------------------------
require_once( "$gids_home/etc/config.php" );

require_once( GIDS_HOME.'/include/prog/routine_wrapper.php' );

//----------------------------------------------------------------------------------------------------------------------
function Synopsis()
{
  echo "Synopsis: routine_wrapper <configuration file>\n";
  exit(1);
}

//----------------------------------------------------------------------------------------------------------------------
if($argc!=2)
{
  Synopsis();
}

$wrapper = new GIDS_ProgRoutineWrapper();
$wrapper->Run( $argv[1] );

//----------------------------------------------------------------------------------------------------------------------

