// ---------------------------------------------------------------------------------------------------------------------
error_reporting(E_ALL);
date_default_timezone_set( 'Europe/Amsterdam' );

//----------------------------------------------------------------------------------------------------------------------
$set_home = realpath( dirname( $argv[0] ).'/..' );
define( 'SET_HOME', $set_home );

//----------------------------------------------------------------------------------------------------------------------
require_once( SET_HOME.'/include/prog/routine_wrapper.php' );

//----------------------------------------------------------------------------------------------------------------------
function Synopsis()
{
  echo "Synopsis: routine_wrapper <configuration file>\n";
  exit(1);
}

//----------------------------------------------------------------------------------------------------------------------
if($argc!=2)
{
  Synopsis();
}

$wrapper = new SET_ProgRoutineWrapper();
$wrapper->Run( $argv[1] );

//----------------------------------------------------------------------------------------------------------------------

